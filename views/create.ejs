<%- include('header') %>
<div class="right-link"><a class="btn btn-link" href="/main">Back</a></div>
<div class="panel panel-info">
  <div class="panel-heading">Add API</div>
  <div class="panel-body">
      <form class="form-horizontal" method="post" action="/main" enctype="multipart/form-data">
        <div class="field form-group">
          <label for="name" class="col-sm-2 control-label">API Name: </label>
          <div class="col-sm-10">
            <div class="input-group">
              <div class="input-group-addon">/zhoou/</div>
              <input type="text" class="form-control" name="name" placeholder="api name" required>
            </div>
          </div>
        </div>
        <div class="field form-group">
          <label for="param" class="col-sm-2 control-label">Params Descript:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="param" placeholder="param" value="null" required>
          </div>
        </div>
        <div class="field form-group">
          <label for="function" class="col-sm-2 control-label">Function Descript:</label>
          <div class="col-sm-10">
            <textarea class="form-control" rows="3" name="funcdescript" placeholder="function description" required></textarea>
          </div>
        </div>
        <div class="field form-group required">
          <label for="jsonfile" class="col-sm-2 control-label">json file Input: </label>
          <div class="col-sm-10">
            <input type="file" name="jsonfile" onchange="checkFile(this)" required>
            <p class="help-block">please input json file.</p>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-default">Reset</button>
          </div>
        </div>
        <div>
            <% if (errMsg) { %>
              <p class="message"><%= errMsg %></p>
            <% } %>
        </div>
      </form>
  </div>
</div>


<%- include('footer') %>